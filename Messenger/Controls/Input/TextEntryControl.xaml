<UserControl x:Class="Messenger.TextEntryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Messenger"
             xmlns:core="clr-namespace:Messenger.Core;assembly=Messenger.Core"
             mc:Ignorable="d" 
             DataContext="{x:Static core:TextEntryDesignModel.Instance}">
    
    <!-- Grey underline -->
    <Border BorderBrush="{StaticResource ForegroundDarkBrush}"
            BorderThickness="0 0 0 0.4">

        <Grid Background="{StaticResource ForegroundLightBrush}">

            <!-- Hover over to show edit button -->
            <Grid.Triggers>
                
                <!-- Hover over turquoise -->
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                            <DoubleAnimation To="1" 
                                             Duration="0:0:0.3"
                                             Storyboard.TargetProperty="Opacity"
                                             Storyboard.TargetName="EditButton"/>
                        </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>

                    <!-- Hover out revert -->
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation To="0" 
                                                Duration="0:0:0.3"
                                                Storyboard.TargetProperty="Opacity"
                                                Storyboard.TargetName="EditButton"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>

            </Grid.Triggers>

            <!-- Label -> Name* -> Buttons -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Label -->
            <TextBlock Text="{Binding Label}"
                       Margin="15 12"
                       VerticalAlignment="Center"
                       FontFamily="{StaticResource LatoRegular}"
                       FontSize="22"/>
            
            <!-- Edit Content -->
            <TextBox Text="{Binding EditedText}"
                     Grid.Column="1"
                     FontSize="22"
                     VerticalAlignment="Center"
                     Padding="2"
                     Margin="11 7 10 6"
                     local:AnimateFadeInProperty.Value="{Binding Editing}"
                     FontFamily="{StaticResource LatoRegular}"
                     local:FocusAndSelectProperty.Value="{Binding Editing}"/>

            <!-- Content -->
            <TextBlock Text="{Binding OriginalText}"
                       Grid.Column="1"
                       VerticalAlignment="Center"
                       Margin="15 8"
                       FontSize="22"
                       local:AnimateFadeInProperty.Value="{Binding Editing, 
                            Converter={local:BooleanInvertConverter}}"/>

            <!-- Edit Button Conteiner -->
            <Grid Grid.Column="2"
                  local:AnimateFadeInProperty.Value="{Binding Editing, 
                            Converter={local:BooleanInvertConverter}}">
                
                <!-- Edit Buttons -->
                <Button Content="..." 
                        Padding=" 8 0"
                        x:Name="EditButton"
                        Opacity="0"
                        Cursor="Hand"
                        Command="{Binding EditCommand}"
                        FontSize="22"/>
            </Grid>

            
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal">
                
               <!-- Save Button -->
                <Button IsDefault="True"
                        Content="{StaticResource FontAwesomeTickIcon}"
                        Command="{Binding SaveCommand}"
                        Background="{StaticResource TurquoiseLightBrush}"
                        FontFamily="{StaticResource FontAwesome}"
                        VerticalAlignment="Center"
                        Padding="15 2"
                        Margin="0 0 2 0"
                        Cursor="Hand"
                        FontSize="22"
                        local:AnimateFadeInProperty.Value="{Binding Editing}"/>

                <!-- Cancel Button -->
                <Button IsCancel="True"
                        Content="{StaticResource FontAwesomeCloseIcon}"
                        Command="{Binding CancelCommand}"
                        FontFamily="{StaticResource FontAwesome}"
                        Background="{StaticResource OrangeRedBrush}"
                        VerticalAlignment="Center"
                        Padding="15 2"
                        Cursor="Hand"
                        FontSize="22"
                        Margin="0 0 2 0"
                        local:AnimateFadeInProperty.Value="{Binding Editing}"/>

            </StackPanel>

        </Grid>
        
            
    </Border>
</UserControl>
